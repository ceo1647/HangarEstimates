<UserControl x:Class="HangarEstimates.Infrastructure.Controls.KeyValueTextableComboControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:HangarEstimates.Infrastructure.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
                   Text="{Binding Path=Key}"
                   x:Name="tblText"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap" />
        <controls:EditableComboBox Grid.Column="1"
                                   Validation.Error="cbValue_Error"
                                   x:Name="cbValue"
                                   Background="White"
                                   IsEditable="True" />
    </Grid>
</UserControl>
